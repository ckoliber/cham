<resources>

    <!-- Base application theme. -->
    <style name="ChaM" parent="Theme.Design.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ChaM.NoActionBar" parent="ChaM">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ChaM.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="ChaM.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
